<header id="nav-header">
    <div class="container">
        <div class="row">
            <div class="col-3">
                <a href="<%= url_for "/" %>"><h1 class="text-replacement">iCopete</h1></a>
                <p class="moto">No hay copete, iCopete.<p>
            </div>
            <div class="dropdown-controls">
                <% if current_user %>
                    <%= image_tag current_user.avatar.url, id: "navbar-small-avatar", class: "small-avatar" %> 
                <% else %>
                    <%= image_tag "fallback/default_avatar.png", id: "navbar-small-avatar", class: "small-avatar" %> 
                <% end %>
                <div id="navbar-dropdown-menu" class="dropdown-menu">
                    <div class="dropdown-caret">
                    </div>
                    <ul>
                        <% if current_user %>
                        <li class="current-user">
                            <%= link_to "/profile" do %>
                                <div class="content">
                                    <div>
                                        <strong class="fullname">
                                            <%= current_user.first_name %> <%= current_user.last_name %>
                                        </strong>
                                        <small class="metadata">
                                            <%= fa_icon "user" %>
                                            Ver perfil
                                        </small>
                                    </div>
                                </div>
                            <% end %>
                        </li>
                        <% else %>
                        <li class="current-user">
                            <div class="dropdown-link">
                                <div class="content">
                                    <div>
                                        <strong class="fullname">
                                            Invitado
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <% end %>

                        <li class="dropdown-divider" role="presentation"></li>

                        <% if current_user %>

                        <li>
                            <%= link_to "/cart" do %>
                                <%= fa_icon("shopping-cart") %>
                                Carro de compras (<span id="shopping-cart-number"><%= shopping_cart_number %></span>)
                            <% end %>
                        </li>

                        <li>
                            <a href="#">
                                <%= fa_icon "gift" %>
                                Wishlist
                            </a>
                        </li>

                        <li class="dropdown-divider" role="presentation"></li>

                        <% end %>

                        <% if current_user && current_user.admin_role? %>

                        <li>
                            <%= link_to "/dashboard" do %>
                                <%= fa_icon("dashboard") %>
                                Dashboard
                            <% end %>
                        </li>

                        <li class="dropdown-divider" role="presentation"></li>

                        <% end %>

                        <% if current_user %>
                        <li>
                            <%= link_to fa_icon("sign-out", text: "Desconectarse"), "/logout" %>
                        </li>
                        <% else %>
                        <li>
                            <%= link_to fa_icon("sign-in", text: "Ingresar"), "/login" %>
                        </li>
                        <% end %>

                    </ul>
                </div>
            </div>
