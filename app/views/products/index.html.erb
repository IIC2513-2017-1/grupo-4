<div class="container">
    <div class="row">
        <div class="col-6 h1-margin">
            <h1>Productos</h1>
        </div>
    </div>
    <%= render "product_list", products: @products, is_transaction: false %>
    <% if current_user && current_user.admin_role? %>
    <div class="row">
        <div class="col-12">
            <%= link_to fa_icon("plus", text: "Crear producto"), new_product_path, class: "button" %>
        </div>
    </div>
    <% end %>
</div>