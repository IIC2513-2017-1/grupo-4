<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Tabla de productos</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <table>
            <thead>
                <tr>
                    <th>SKU</th>
                    <th>Categoría</th>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                <% @products.each do |product| %>
                <tr>
                    <td><%= product.sku %></td>
                    <td><%= product.category.name %></td>
                    <td><%= product.name %></td>
                    <td><%= product.price %></td>
                    <td><%= link_to "Ver", product_path(product), class: "button" %></td>
                    <td><%= link_to "Editar", edit_product_path(product), class: "button"%></td>
                    <td><%= link_to "Eliminar", product_path(product), data: { :confirm => "¿Estás seguro que deseas eliminar este producto?" }, :method => :delete, class: "button" %></td>
                </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
</div>