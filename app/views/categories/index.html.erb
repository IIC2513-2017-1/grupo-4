<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Todas las categorias</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <table>
            <thead>
                <tr>
                <th>Nombre</th>
                <th>Descripcion</th>
                </tr>
            </thead>

            <tbody>
                <% @categories.each do |category| %>
                <tr>
                    <td> <%= category.name %> </td>
                    <td> <%= category.description %> </td>
                    <td> <%= link_to "Ver Categoria", "/ver", class: "button"%> </td>
                    <td> <%= link_to "Editar Categoria", "/edit", class: "button"%> </td>
                    <td> <%= link_to "Eliminar Categoria", "/edit", class: "button"%> </td>
                </tr>
                <% end %>
            </tbody>
            </table>
        </div>
    </div>
</div>