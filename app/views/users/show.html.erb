<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Detalle del usuario</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <ul>
                <li> <strong>Nombre: </strong> <%=@user.first_name %> </li>
                <li> <strong>Apellido: </strong> <%= @user.last_name %> </li>
                <li> <strong>Email: </strong> <%= @user.email %> </li>
                <li> <strong>Rol: </strong> <%= @user.role %> </li>
                <li> <%= link_to fa_icon("pencil", text: "Editar usuario"), edit_user_path(@user), class: "button"%> </li> 
                <li> <%= link_to fa_icon("trash", text: "Eliminar usuario"), user_path(@user), data: { :confirm => "¿Estás seguro que deseas eliminar el usuario?" }, :method => :delete, class: "button"%></li>
            </ul>
        </div>        
    </div>
</div>